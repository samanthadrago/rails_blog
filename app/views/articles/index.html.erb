<div class="w-1-2 m-xl">
<h1>Posts</h1>
<%= link_to "New article", new_article_path, :class => 'td-n' %>
<% @articles.each do |article| %>
  <%= link_to article_path(article), :class => "td-n brd-b" do %>
  <div class="brd-b pl-lg">
    <h2><%= article.title %></h2>
    <p><%= friendly_date(article.created_at) %></p>
  </div>
  <% end %>
<% end %>
</div>
