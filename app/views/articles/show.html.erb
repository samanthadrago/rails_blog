<div class="w-1-2 m-xl">
  <h1>
    <%= @article.title %>
  </h1>

  <p>
    <%= @article.text %>
  </p>

  <h2>Comments</h2>
  <%= render @article.comments %>

  <h3>Add a comment:</h3>
  <%= render "comments/form" %>

  <%= link_to 'Back', articles_path %> | <%= link_to 'Edit', edit_article_path(@article) %>
</div>